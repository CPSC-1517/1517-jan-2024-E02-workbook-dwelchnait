@page "/"

<PageTitle>Home</PageTitle>
@using WestWindSystem.Entities;
@using WestWindSystem.BLL;

<h1>Hello, world!</h1>

Welcome to your new app.

<p>WestWind Database Version: Major: @buildVersion.Major Minor: @buildVersion.Minor
            Build: @buildVersion.Build version data: @buildVersion.ReleaseDate.ToShortDateString()</p>
@code{
    private BuildVersion buildVersion{get;set;}

    //annotation to indicate that an inject is being applied to the following property
    //this is called property injection
    //the annotation is [Inject]
    [Inject]
    public WestWindAbout _buildVersionService { get; set; }

    protected override void OnInitialized()
    {
        //consume a service from the registered services done in the class library
        //the service to be consumed will the be WestWindAbout_Get
        buildVersion = _buildVersionService.WestWindAbout_Get();
        base.OnInitialized();
    }
}
